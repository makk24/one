@import "libs/weToast/weToast.wxss";

button {
  border: 0;
  background: none;
  padding: 0;
  text-align: inherit;
  line-height: inherit;
  color: inherit;
  border-radius: 0;
  margin: 0;
}

button::after {
  border: 0;
}

.hover-class {
  opacity: 0.8;
}

.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background: linear-gradient(135deg, #FFFFFF 0%, #EEEEEE 100%);
}